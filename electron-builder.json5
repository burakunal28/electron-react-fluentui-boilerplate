{
  "productName": "Electron React FluentUI Boilerplate",
  "appId": "com.example.electronreactfluentui",
  "directories": {
    "output": "release",
    "buildResources": "assets"
  },
  "files": [
    "dist-electron/**/*",
    "dist/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "win": {
    "target": [
      "nsis"
    ]
  },
  "mac": {
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}